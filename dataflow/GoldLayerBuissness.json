{
	"name": "GoldLayerBuissness",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "AdfProjectDataStorage",
						"type": "LinkedServiceReference"
					},
					"name": "DimAirline"
				},
				{
					"linkedService": {
						"referenceName": "AdfProjectDataStorage",
						"type": "LinkedServiceReference"
					},
					"name": "DimFlight"
				},
				{
					"linkedService": {
						"referenceName": "AdfProjectDataStorage",
						"type": "LinkedServiceReference"
					},
					"name": "FactBookings"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "AdfProjectDataStorage",
						"type": "LinkedServiceReference"
					},
					"name": "GoldSink"
				},
				{
					"linkedService": {
						"referenceName": "AdfProjectDataStorage",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "join"
				},
				{
					"name": "selectCols"
				},
				{
					"name": "aggregate"
				},
				{
					"name": "SalesRank"
				},
				{
					"name": "filterTop5"
				},
				{
					"name": "join1"
				},
				{
					"name": "join2"
				},
				{
					"name": "select1"
				},
				{
					"name": "aggregate1"
				},
				{
					"name": "window1"
				},
				{
					"name": "Top3AirlinesWithMostBookings"
				},
				{
					"name": "alterRow"
				},
				{
					"name": "alterRow1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          airline_id as short,",
				"          airline_name as string,",
				"          country as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delta',",
				"     fileSystem: 'silver',",
				"     folderPath: 'DimAirline') ~> DimAirline",
				"source(output(",
				"          flight_id as short,",
				"          flight_number as string,",
				"          departure_timestamp as string,",
				"          arrival_timestamp as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delta',",
				"     fileSystem: 'silver',",
				"     folderPath: 'DimFlight') ~> DimFlight",
				"source(output(",
				"          booking_id as integer,",
				"          passenger_id as integer,",
				"          flight_id as integer,",
				"          airline_id as integer,",
				"          origin_airport_id as integer,",
				"          destination_airport_id as integer,",
				"          booking_date as date,",
				"          ticket_cost as integer,",
				"          flight_duration_mins as integer,",
				"          checkin_status as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delta',",
				"     fileSystem: 'silver',",
				"     folderPath: 'FactBookings') ~> FactBookings",
				"FactBookings, DimAirline join(FactBookings@airline_id == DimAirline@airline_id,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join",
				"join select(mapColumn(",
				"          booking_id,",
				"          passenger_id,",
				"          flight_id,",
				"          airline_id = FactBookings@airline_id,",
				"          origin_airport_id,",
				"          destination_airport_id,",
				"          booking_date,",
				"          ticket_cost,",
				"          flight_duration_mins,",
				"          checkin_status,",
				"          airline_name,",
				"          country",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectCols",
				"selectCols aggregate(groupBy(airline_name),",
				"     total_sales = sum(ticket_cost)) ~> aggregate",
				"aggregate window(desc(total_sales, true),",
				"     top = denseRank()) ~> SalesRank",
				"SalesRank filter(top < 6) ~> filterTop5",
				"DimFlight, FactBookings join(DimFlight@flight_id == FactBookings@flight_id,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1, DimAirline join(FactBookings@airline_id == DimAirline@airline_id,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join2",
				"join2 select(mapColumn(",
				"          flight_number,",
				"          booking_id,",
				"          ticket_cost,",
				"          airline_id = DimAirline@airline_id,",
				"          airline_name,",
				"          country",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 aggregate(groupBy(airline_name),",
				"     total_bookings = count(booking_id)) ~> aggregate1",
				"aggregate1 window(desc(total_bookings, true),",
				"     max_bookings = denseRank()) ~> window1",
				"window1 filter(max_bookings < 4) ~> Top3AirlinesWithMostBookings",
				"filterTop5 alterRow(insertIf(1==1)) ~> alterRow",
				"Top3AirlinesWithMostBookings alterRow(insertIf(1==1)) ~> alterRow1",
				"alterRow sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'gold',",
				"     folderPath: 'MostSales',",
				"     overwrite: true,",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable: false,",
				"     insertable: true,",
				"     updateable: false,",
				"     upsertable: false,",
				"     keys:['airline_name'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> GoldSink",
				"alterRow1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'gold',",
				"     folderPath: 'MostBookings',",
				"     overwrite: true,",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable: false,",
				"     insertable: true,",
				"     updateable: false,",
				"     upsertable: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}